.header.clearfix
  nav.navbar.navbar-expand-md.navbar.bg-dark.fixed-top
    .container
      a.navbar-brand(href="/") 공모전닷컴
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/compInfos") 모아보기

          if (!currentUser) 
            li.nav-item
              a.nav-link(href='/signin') 로그인
            li.nav-item
              a.nav-link(href='/users/new') 회원가입
          else
            li.nav-item.dropdown
              a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                | 마이페이지
              .dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                a.dropdown-item(href=`/users/${currentUser._id}`) 내 정보 보기
                a.dropdown-item(href=`/users/${currentUser._id}/edit`) 내 정보 수정
                a.dropdown-item(href=`/users/${currentUser._id}/favorite`) 즐겨찾기
                if (currentUser.role == "manager")
                  a.dropdown-item(href='/users') 사용자 목록
                  a.dropdown-item(href='/compInfos/waiting') 승인 대기 글
                  a.dropdown-item(href='/compInfos/off') 신고가 들어온 글
            li.nav-item
              a.nav-link(href='/signout') 로그아웃
        
          
